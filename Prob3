#include <iostream>
#include <conio.h>
#include <cmath>
#include <iomanip>


using namespace std;

int main()
{
	int x,y;
	float V,z, A;
	z = 2.5;
		cout << "Input x: "; cin >>x;
		cout << "Input y: "; cin >>y;
	switch (x)
		{
		case 1:
			
			if (y > 1 && y < 5)
			{
			V = x * y * z;
			cout << setw(10) << setprecision(2) << fixed;
				cout << "V= "<< V;
			}
			else if (y >= 5)
			{
			V = x + (y / z);
			cout << setw(10) << setprecision(2) << fixed;
				cout << "V= "<< V;
			}
			else
			{
			V = x + y + z;
			cout << setw(10) << setprecision(2) << fixed;
				cout << "V= "<< V;
			}
			break;
		case 2:
			if (y <= 5)
			{
				{
			A = (x-y)/z;
					if (A < 0)
					{
					V = A * -1;
					cout << setw(10) << setprecision(2) << fixed;
					cout <<"V= "<< V;
					}
					else 
					cout << setw(10) << setprecision(2) << fixed;
					cout <<"V= "<< A;
				}
			}
			else
			{
			V = x - sqrt(y+z);
			cout << setw(10) << setprecision(2) << fixed;
			cout <<"V= "<< V;
			}
			break;
		default:
			V = x + y + z;
			cout << setw(10) << setprecision(2) << fixed;
			cout << "V= "<< V;
		
		}
	_getch();
	return 0;
			
}
